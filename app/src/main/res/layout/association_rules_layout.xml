<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/location_description"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:minHeight="300dp"
            android:orientation="horizontal"
            android:paddingStart="6dp"
            android:text="Association rules:\n
1. All members shall respect one another and their property.\n
2. All members are expected to particptae in meetings and trainings provided.\n
3. Members shall provide information that is truthful at all times.\n
4. Members shall respect the leaders who are in charge at any given time."
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintWidth_percent="0.8" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>
